<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="stlUno">
        <item name="android:layout_weight">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">4dp</item>
        <!--
        gravity:justificacion del contenido dentro de la view
        dp: unidad de medida permite al layout escalar apropiadamente en dispositivos con disitinta densidad
        sp: se ejecuta como dp, pero también respeta el tamaño de texto del usuario
        -->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#e6e6e6</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#727272</item>
    </style>
</resources>