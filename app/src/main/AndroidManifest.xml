<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.theframework.matdesign">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- https://stackoverflow.com/questions/3631982/change-applications-starting-activity -->
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Pruebas"
            android:label="Actividad de Pruebas">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditTextValidation" />
        <activity android:name=".Index" />
        <activity
            android:name=".ActivityRublos"
            android:label="@string/title_activity_rublos"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>